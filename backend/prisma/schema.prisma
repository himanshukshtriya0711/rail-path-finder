generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phone     String?
  password  String
  role      UserRole @default(USER)
  bookings  Booking[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  USER
  ADMIN
}

model Station {
  id        String  @id @default(cuid())
  code      String  @unique
  name      String
  city      String
  routes    Route[]
  createdAt DateTime @default(now())
}

model Train {
  id        String   @id @default(cuid())
  number    String   @unique
  name      String
  fare      Int
  routes    Route[]
  schedules Schedule[]
  bookings  Booking[]
  createdAt DateTime @default(now())
}

model Route {
  id         String   @id @default(cuid())
  train      Train    @relation(fields: [trainId], references: [id])
  trainId    String
  station    Station  @relation(fields: [stationId], references: [id])
  stationId  String
  position   Int
}

model Schedule {
  id        String  @id @default(cuid())
  train     Train   @relation(fields: [trainId], references: [id])
  trainId   String
  date      DateTime
  totalSeats Int
  availableSeats Int
}

model Booking {
  id        String   @id @default(cuid())
  pnr       String   @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  train     Train    @relation(fields: [trainId], references: [id])
  trainId   String
  date      DateTime
  passengers Json
  amount    Int
  status    BookingStatus @default(CONFIRMED)
  createdAt DateTime @default(now())
}

enum BookingStatus {
  CONFIRMED
  CANCELLED
  PENDING
}
